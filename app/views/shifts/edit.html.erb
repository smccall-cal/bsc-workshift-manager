<h1>Editing Shift</h1>

<%= notice %>

Shift ID: <%= @shift.id%>
<br>
Start Date: <%= @semester.start_date.strftime("%d %B %Y")%>
<br>
End Date: <%= @semester.end_date.strftime("%d %B %Y")%>

<%= form_tag semester_shift_path, :method => "patch" do %>

  <%= label :shift, :location, 'Shift Location'%>
  <%= text_field :shift, :location%>
  
  <%= label :shift, :description, 'Shift Description'%>
  <%= text_field :shift, :description%>

  <%= label :shift, :day, 'Day of the week'%>
  <%= select_tag 'shift[day]', options_for_select(Date::DAYNAMES) %>
  
  <%= label :shift, :time, 'Time of shift'%>
  <%= time_select("shift", "time")%>

  <%= submit_tag 'Save Shift'%>
  
<% end %>

<%= link_to 'Back', semester_path(@semester) %> 