<%= form_for :user, :url => user_path(@user), :method => :put do |f| %>
    <div class="field">
        <%= f.label :username %><br />
        <%= f.text_field :username, autofocus: true %>
    </div>
    <div class="field">
        <%= f.label :email %><br />
        <%= f.text_field :email, autofocus: true %>
    </div>
    <div class="field">
        <%= f.label :building %><br />
        <%= f.select :building, current_user.buildings %>
    </div>
    <div class="actions">
        <%= f.submit "Save" %>
    </div>
<% end %>

<%= link_to 'Back', users_path %>