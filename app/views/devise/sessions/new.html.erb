<div class= 'Title_Container'>
<h1>BSC Workshift Manager<h1>
</div>
<br>

<div class='login_container'>
  <br>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="fieldEmail">
      <%= f.select :email, User.all.collect{ |u| [u.username, u.email] }, {:prompt => 'Name'}, {:class => 'email_field'}%>
    </div>

    </br>

    <div class="fieldPassword">
      <%= f.password_field :password, class: 'password_field', placeholder: 'Password', autocomplete: "off" %>
    </div>

    <br>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>
    
    <br>

    <div class="actions">
      <%= f.submit "Log in", class: 'actions_button' %>
    </div>

  <% end %>
  <br>
  <%= render "devise/shared/links", color: 'black' %>
</div>
