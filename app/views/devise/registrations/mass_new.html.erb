<h2>Create Many New Residents</h2>

<%= form_for :user, url: mass_create_path do |f| %>
  <div class="field">
    <%= f.label :username %><br />
    <%= f.text_area :username, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_area :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :building%> <br />
    <%= f.select :building, current_user.buildings %>
  </div>

  <div class="field" style="display: none;">
    <%= f.text_field :redirect, :value => user_path(current_user.id) %>
  </div>

  <div class="actions">
    <%= f.submit "Sign them up" %>
  </div>
<% end %>

<%= link_to "Back", user_path(current_user.id) %>